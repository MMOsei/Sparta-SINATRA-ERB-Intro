<h1>Edit page for <%= @post[:title] %></h1>

<form action="/posts/<%= @post[:id]%>" method="post">

  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title for your post" value="<%= @post[:title]%>">
  </div>

  <div>
    <label>Description</label>
    <textarea name="Description" rows="8" cols="80" placeholder="Enter a description for your post"><%= @post[:body]%></textarea>
  </div>

  <input type="submit" value="submit">

  <input type="hidden" name="_method" value="PUT">
</form>
