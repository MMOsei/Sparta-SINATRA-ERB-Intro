

    <h1>Welcome to the homepage</h1>

    <% @posts.each do |post| %>
      <h3><%= post[:title] %></h3>
      <a href="/<%= post[:id] %>">See More</a>
      <a href="/<%= post[:id] %>/edit">Edit</a>
      <form action="/<%= post[:id] %>" method="post">
        <input type="submit" value="DELETE">
        <input type="hidden" name="_method" value="DELETE">
      </form>
    <% end %>
